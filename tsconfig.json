{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                     
    "strict": true,                           
    "esModuleInterop": true,                   
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true,  
    "outDir": "./dist",                        
    "rootDir": "./src",                        
    "noImplicitAny": true,                     
    "moduleResolution": "node",                
    "resolveJsonModule": true                  
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}